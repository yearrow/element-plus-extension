{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "checkJs": true,
    "strict": true,
    "jsx": "preserve",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true, 
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames":true,
    "types": ["node","unplugin-vue-define-options/macros-global" /* ... */],
    "baseUrl": ".",
    "lib": [
      "esnext", 
      "ES2015",
      "ES2016",
      "ES2017",
      "DOM"
    ],
    "outDir": "./lib",
    "declarationDir": "lib/types",
    "paths": {
      "@/*": ["src/*"]
  },
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
  ],
  "exclude": ["node_modules"]
}