{
  "compilerOptions": {
      "allowJs": true,
      "target": "esnext",
      "module": "esnext",
      "checkJs": true,
      "declaration": true,
      "outDir":  "lib/types",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "types": ["node","unplugin-vue-define-options/macros-global" /* ... */],
      "paths": {
          "@/*": ["src/*"]
      },
      "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
  ],
  "exclude": ["node_modules"]
}
